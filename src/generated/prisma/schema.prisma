generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GameStatus {
  A_JOUER
  EN_COURS
  TERMINE
  ABANDONNE
}

enum Platform {
  PC
  PS5
  XBOX
  SWITCH
  MOBILE
  AUTRE
}

model Game {
  id        Int        @id @default(autoincrement())
  title     String
  platform  Platform
  status    GameStatus @default(A_JOUER)
  rating    Int?
  imageUrl  String?
  userId    String
  isPublic  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}
